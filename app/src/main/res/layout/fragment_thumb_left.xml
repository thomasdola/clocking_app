<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ui.view.bio.fragments.thumb_left.ThumbLeftFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:background="@drawable/finger_picture_background"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:id="@+id/fingerView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:contentDescription="@null" />

        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/left_thumb"
            android:id="@+id/headerView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <Button
            android:textColor="@color/white"
            android:background="@drawable/sec_action_button_background"
            android:textAllCaps="false"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="@string/back_text"
            android:id="@+id/backButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:textColor="@color/white"
            android:background="@drawable/sec_action_button_background"
            android:textAllCaps="false"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="@string/next_text"
            android:id="@+id/nextButton"
            android:layout_alignBottom="@+id/backButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:textAllCaps="false"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="@string/capture"
            android:id="@+id/captureButton"
            android:layout_above="@+id/backButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp" />

    </RelativeLayout>
</FrameLayout>
