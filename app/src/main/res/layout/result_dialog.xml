<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:id="@+id/portraitView"
        android:layout_marginTop="20dp"
        android:contentDescription="@null"
        android:layout_below="@+id/statusView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/nameView"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/portraitView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/bidView"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/nameView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:padding="5dp"
        android:background="@drawable/success_background"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/verified"
        android:id="@+id/statusView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:background="@drawable/sec_action_button_background"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close"
        android:id="@+id/closeModalButton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bidView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>