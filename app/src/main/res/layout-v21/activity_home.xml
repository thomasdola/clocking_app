    <TextView
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/deviceIdView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:textAllCaps="false"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/logout"
        android:id="@+id/logoutButton"
        android:layout_above="@+id/deviceIdView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />

    <RelativeLayout
        android:background="@drawable/big_button_background"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:id="@+id/clocking_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:background="@drawable/attendance"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:id="@+id/imageView2"
            android:contentDescription="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/clocking_text"
            android:textColor="@color/white"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="34dp"
            android:layout_marginEnd="34dp" />
    </RelativeLayout>

</RelativeLayout>
